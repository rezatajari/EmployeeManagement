@model List<Employee>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["title"] = "Index";
}

<div class="row justify-content-center">
    @foreach (var employee in Model)
    {
        var photoEmployee = "~/Images/" + (employee.PhotoPath ?? "download.jpg");
        <div class="card m-3">
            <div class="bg-dark card">
                <div class="card-header">
                    <h3>@employee.Name</h3>
                </div>

                <img src="@photoEmployee" class="card-img-top" style="height:300px;" asp-append-version="true" />
                <div class="card-footer text-center">
                    <a class="btn btn-primary m-1" asp-action="Datails" asp-controller="Home" asp-route-id="@employee.Id">View</a>
                    <a class="btn btn-warning m-1" asp-action="Update" asp-controller="Home" asp-route-id="@employee.Id">Update</a>
                    <a class="btn btn-danger  m-1" asp-action="Delete" asp-controller="Home" asp-route-id="@employee.Id">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
